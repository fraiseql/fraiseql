{
    "name": "fraiseql/fraiseql-php",
    "description": "FraiseQL PHP implementation - GraphQL schema definition and compilation framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "FraiseQL Team",
            "email": "team@fraiseql.dev"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "FraiseQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FraiseQL\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable"
}
