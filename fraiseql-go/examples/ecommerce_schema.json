{
  "types": [
    {
      "name": "Payment",
      "fields": [
        {
          "name": "id",
          "type": "ID",
          "nullable": false
        },
        {
          "name": "order_id",
          "type": "ID",
          "nullable": false
        },
        {
          "name": "amount",
          "type": "Float",
          "nullable": false
        },
        {
          "name": "status",
          "type": "String",
          "nullable": false
        },
        {
          "name": "processed_at",
          "type": "DateTime",
          "nullable": true
        }
      ],
      "description": "Payment record"
    },
    {
      "name": "Order",
      "fields": [
        {
          "name": "id",
          "type": "ID",
          "nullable": false
        },
        {
          "name": "customer_email",
          "type": "String",
          "nullable": false
        },
        {
          "name": "status",
          "type": "String",
          "nullable": false
        },
        {
          "name": "total",
          "type": "Float",
          "nullable": false
        },
        {
          "name": "created_at",
          "type": "DateTime",
          "nullable": false
        }
      ],
      "description": "E-commerce order"
    }
  ],
  "queries": null,
  "mutations": null,
  "subscriptions": null,
  "observers": [
    {
      "name": "onOrderCreated",
      "entity": "Order",
      "event": "INSERT",
      "actions": [
        {
          "channel": "#orders",
          "message": "New order {id} by {customer_email}",
          "type": "slack",
          "webhook_url_env": "SLACK_WEBHOOK_URL"
        }
      ],
      "retry": {
        "max_attempts": 3,
        "backoff_strategy": "exponential",
        "initial_delay_ms": 100,
        "max_delay_ms": 60000
      }
    },
    {
      "name": "onHighValueOrder",
      "entity": "Order",
      "event": "INSERT",
      "actions": [
        {
          "headers": {
            "Content-Type": "application/json"
          },
          "type": "webhook",
          "url": "https://api.example.com/high-value-orders"
        },
        {
          "channel": "#sales",
          "message": "üéâ High-value order {id}: ${total}",
          "type": "slack",
          "webhook_url_env": "SLACK_WEBHOOK_URL"
        },
        {
          "body": "Order {id} for ${total} was created by {customer_email}",
          "subject": "High-value order {id}",
          "to": "sales@example.com",
          "type": "email"
        }
      ],
      "condition": "total \u003e 1000",
      "retry": {
        "max_attempts": 3,
        "backoff_strategy": "exponential",
        "initial_delay_ms": 100,
        "max_delay_ms": 60000
      }
    },
    {
      "name": "onOrderShipped",
      "entity": "Order",
      "event": "UPDATE",
      "actions": [
        {
          "headers": {
            "Content-Type": "application/json"
          },
          "type": "webhook",
          "url_env": "SHIPPING_WEBHOOK_URL"
        },
        {
          "body": "Your order is on its way. Track it here: https://example.com/track/{id}",
          "from": "noreply@example.com",
          "subject": "Your order {id} has shipped!",
          "to": "{customer_email}",
          "type": "email"
        }
      ],
      "condition": "status.changed() and status == 'shipped'",
      "retry": {
        "max_attempts": 3,
        "backoff_strategy": "exponential",
        "initial_delay_ms": 100,
        "max_delay_ms": 60000
      }
    },
    {
      "name": "onPaymentFailure",
      "entity": "Payment",
      "event": "UPDATE",
      "actions": [
        {
          "channel": "#payments",
          "message": "‚ö†Ô∏è Payment failed for order {order_id}: {amount}",
          "type": "slack",
          "webhook_url_env": "SLACK_WEBHOOK_URL"
        },
        {
          "headers": {
            "Authorization": "Bearer {PAYMENT_API_TOKEN}"
          },
          "type": "webhook",
          "url": "https://api.example.com/payment-failures"
        }
      ],
      "condition": "status == 'failed'",
      "retry": {
        "max_attempts": 5,
        "backoff_strategy": "exponential",
        "initial_delay_ms": 100,
        "max_delay_ms": 60000
      }
    },
    {
      "name": "onOrderDeleted",
      "entity": "Order",
      "event": "DELETE",
      "actions": [
        {
          "body_template": "{\"type\": \"order\", \"id\": \"{{id}}\", \"data\": {{_json}}}",
          "headers": {
            "Content-Type": "application/json"
          },
          "type": "webhook",
          "url": "https://api.example.com/archive"
        }
      ],
      "retry": {
        "max_attempts": 3,
        "backoff_strategy": "exponential",
        "initial_delay_ms": 100,
        "max_delay_ms": 60000
      }
    }
  ]
}
