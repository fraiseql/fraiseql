{
  "$schema": "https://fraiseql.dev/schema/v2.json",
  "version": "2.0",
  "types": [
    {
      "name": "User",
      "description": "A user in the system.",
      "fields": [
        {"name": "id", "type": "Int", "nullable": false},
        {"name": "name", "type": "String", "nullable": false},
        {"name": "email", "type": "String", "nullable": false},
        {"name": "created_at", "type": "DateTime", "nullable": false}
      ]
    },
    {
      "name": "Post",
      "description": "A blog post.",
      "fields": [
        {"name": "id", "type": "Int", "nullable": false},
        {"name": "title", "type": "String", "nullable": false},
        {"name": "content", "type": "String", "nullable": false},
        {"name": "author_id", "type": "Int", "nullable": false},
        {"name": "author", "type": "User", "nullable": true},
        {"name": "created_at", "type": "DateTime", "nullable": false}
      ]
    }
  ],
  "queries": [
    {
      "name": "users",
      "description": "Get all users.",
      "return_type": "User",
      "returns_list": true,
      "nullable": false,
      "arguments": [
        {"name": "limit", "type": "Int", "nullable": true, "default": 100}
      ],
      "sql_source": "v_users"
    },
    {
      "name": "user",
      "description": "Get a user by ID.",
      "return_type": "User",
      "returns_list": false,
      "nullable": true,
      "arguments": [
        {"name": "id", "type": "Int", "nullable": false}
      ],
      "sql_source": "v_users"
    },
    {
      "name": "posts",
      "description": "Get all posts, optionally filtered by author.",
      "return_type": "Post",
      "returns_list": true,
      "nullable": false,
      "arguments": [
        {"name": "limit", "type": "Int", "nullable": true, "default": 100},
        {"name": "author_id", "type": "Int", "nullable": true}
      ],
      "sql_source": "v_posts"
    },
    {
      "name": "post",
      "description": "Get a post by ID.",
      "return_type": "Post",
      "returns_list": false,
      "nullable": true,
      "arguments": [
        {"name": "id", "type": "Int", "nullable": false}
      ],
      "sql_source": "v_posts"
    }
  ],
  "mutations": []
}
