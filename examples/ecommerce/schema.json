{
  "version": "1.0.0",
  "types": {
    "Category": {
      "fields": {
        "id": "Int!",
        "name": "String!",
        "description": "String",
        "products": "[Product!]!"
      }
    },
    "Product": {
      "fields": {
        "id": "Int!",
        "name": "String!",
        "description": "String",
        "price": "Float!",
        "inventory": "Int!",
        "category": "Category!",
        "categoryId": "Int!",
        "orders": "[OrderItem!]!"
      }
    },
    "Customer": {
      "fields": {
        "id": "Int!",
        "name": "String!",
        "email": "String!",
        "phone": "String",
        "joinedDate": "DateTime!",
        "orders": "[Order!]!"
      }
    },
    "Order": {
      "fields": {
        "id": "Int!",
        "customerId": "Int!",
        "customer": "Customer!",
        "items": "[OrderItem!]!",
        "totalPrice": "Float!",
        "status": "String!",
        "createdAt": "DateTime!",
        "updatedAt": "DateTime!"
      }
    },
    "OrderItem": {
      "fields": {
        "id": "Int!",
        "orderId": "Int!",
        "order": "Order!",
        "productId": "Int!",
        "product": "Product!",
        "quantity": "Int!",
        "price": "Float!",
        "subtotal": "Float!"
      }
    }
  },
  "queries": {
    "categories": {
      "return": "[Category!]!",
      "description": "Get all product categories"
    },
    "category": {
      "args": { "id": "Int!" },
      "return": "Category",
      "description": "Get a category by ID"
    },
    "products": {
      "args": {
        "limit": "Int",
        "category": "String",
        "minPrice": "Float",
        "maxPrice": "Float"
      },
      "return": "[Product!]!",
      "description": "Get products with optional filtering"
    },
    "product": {
      "args": { "id": "Int!" },
      "return": "Product",
      "description": "Get a product by ID"
    },
    "customers": {
      "args": { "limit": "Int" },
      "return": "[Customer!]!",
      "description": "Get all customers"
    },
    "customer": {
      "args": { "id": "Int!" },
      "return": "Customer",
      "description": "Get a customer by ID"
    },
    "orders": {
      "args": {
        "limit": "Int",
        "customerId": "Int",
        "status": "String"
      },
      "return": "[Order!]!",
      "description": "Get orders with optional filtering"
    },
    "order": {
      "args": { "id": "Int!" },
      "return": "Order",
      "description": "Get an order by ID"
    }
  }
