      "description": "Get user by ID"
    },
    {
      "name": "getCurrentUser",
      "return_type": "User",
      "return_array": false,
      "description": "Get authenticated user's profile"
    }
  ],
  "mutations": [
    {
      "name": "login",
      "return_type": "Session",
