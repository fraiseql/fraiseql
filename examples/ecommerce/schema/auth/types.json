{
  "types": [
    {
      "name": "User",
      "fields": [
        {
          "name": "id",
          "type": "ID",
          "nullable": false,
          "description": "Unique user identifier"
        },
        {
          "name": "email",
          "type": "String",
          "nullable": false,
          "description": "User email address"
        },
        {
          "name": "firstName",
          "type": "String",
          "nullable": true,
          "description": "User's first name"
        },
        {
          "name": "lastName",
          "type": "String",
          "nullable": true,
          "description": "User's last name"
        },
        {
          "name": "role",
          "type": "String",
          "nullable": false,
          "description": "User role (admin, customer, vendor)"
        }
      ],
      "description": "User account information"
    },
    {
      "name": "Session",
      "fields": [
        {
          "name": "id",
          "type": "ID",
          "nullable": false
        },
        {
          "name": "userId",
          "type": "ID",
          "nullable": false
        },
        {
          "name": "token",
          "type": "String",
          "nullable": false
        },
        {
          "name": "expiresAt",
          "type": "String",
          "nullable": false,
          "description": "ISO 8601 timestamp"
        }
      ],
      "description": "User session token"
    }
  ],
  "queries": [
    {
      "name": "getUser",
      "return_type": "User",
