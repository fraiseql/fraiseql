{
  "version": "1.0.0",
  "types": {
    "Event": {
      "fields": {
        "id": "Int!",
        "type": "String!",
        "timestamp": "DateTime!",
        "data": "String!"
      }
    },
    "Message": {
      "fields": {
        "id": "Int!",
        "userId": "Int!",
        "content": "String!",
        "timestamp": "DateTime!",
        "reactions": "Int!"
      }
    },
    "UserActivity": {
      "fields": {
        "userId": "Int!",
        "username": "String!",
        "status": "String!",
        "lastSeen": "DateTime!",
        "activeNow": "Boolean!"
      }
    },
    "LiveMetrics": {
      "fields": {
        "id": "Int!",
        "metric": "String!",
        "value": "Float!",
        "timestamp": "DateTime!",
        "source": "String!"
      }
    }
  },
  "queries": {
    "events": {
      "args": { "limit": "Int", "type": "String" },
      "return": "[Event!]!",
      "description": "Get recent events with optional filtering"
    },
    "event": {
      "args": { "id": "Int!" },
      "return": "Event",
      "description": "Get a specific event by ID"
    },
    "messages": {
      "args": { "limit": "Int" },
      "return": "[Message!]!",
      "description": "Get recent messages"
    },
    "userActivity": {
      "args": { "userId": "Int!" },
      "return": "UserActivity",
      "description": "Get user activity status"
    },
    "metrics": {
      "args": { "metric": "String", "limit": "Int" },
      "return": "[LiveMetrics!]!",
      "description": "Get live system metrics"
    }
  },
  "subscriptions": {
    "onEvent": {
      "args": { "type": "String" },
      "return": "Event!",
      "description": "Subscribe to new events in real-time"
    },
    "onMessage": {
      "return": "Message!",
      "description": "Subscribe to new messages as they arrive"
    },
    "onUserStatusChange": {
      "return": "UserActivity!",
      "description": "Subscribe to user status changes"
    },
    "onMetricUpdate": {
      "args": { "metric": "String" },
      "return": "LiveMetrics!",
      "description": "Subscribe to real-time metric updates"
    }
  }
}
