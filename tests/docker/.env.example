# FraiseQL Integration Test Environment Variables
# Copy this file to .env and adjust as needed

# PostgreSQL Configuration
# Note: Port 5433 is used in Docker to avoid conflicts with host PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=fraiseql
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=fraiseql
MYSQL_USER=test_user
MYSQL_PASSWORD=test_password
MYSQL_ROOT_PASSWORD=root_password

# SQL Server Configuration
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DB=fraiseql
SQLSERVER_USER=sa
SQLSERVER_PASSWORD=SqlServer@123

# Connection Strings (for testing)
DATABASE_URL_POSTGRES=postgresql://test_user:test_password@localhost:5433/fraiseql
DATABASE_URL_MYSQL=mysql://test_user:test_password@localhost:3306/fraiseql
DATABASE_URL_SQLSERVER=mssql://sa:SqlServer@123@localhost:1433/fraiseql

# Test Configuration
RUST_TEST_THREADS=4
RUST_LOG=debug
